<div class="flex flex-col">
  <%= f.label :password, class: 'text-sm' %>
  <% if local_assigns[:from_sign_up] %>
      <% if @minimum_password_length %>
        <em class="text-xs">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
  <% end %>
  <%= f.password_field :password, autocomplete: "current-password", class: 'bg-gray-200 rounded-lg border-none outline-none resize-none border-transparent focus:border-transparent focus:ring-0 text-base py-2 px-4' %>
</div>
