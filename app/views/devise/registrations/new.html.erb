<div class="w-full flex flex-col gap-4 items-center min-h-screen justify-center">
  <h1 class="font-bold text-4xl">Sign up</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="flex flex-col gap-4">
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= render partial: "devise/shared/full_name_input", locals: {f: f} %>
    <%= render partial: "devise/shared/email_input", locals: {f: f} %>
    <%= render partial: "devise/shared/password_input", locals: {f:f, from_sign_up: true} %>

    <%= render partial: 'devise/shared/password_confirmation', locals: {f:f} %>

      <%= render partial: 'devise/shared/submit', locals: {f:f, label: "Sign up"} %>

    </div>
  <% end %>
  <div class="text-center flex flex-col w-full px-10 gap-4">
    <%= render "devise/shared/links" %>
  </div>
</div>


